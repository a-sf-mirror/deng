	${CMAKE_BINARY_DIR}/_jheretic_mobj.c )

ELSE (ENABLEMAO)
	ADD_LIBRARY (jheretic SHARED ${JHERETIC_SOURCES} ${COMMON_PLUGIN_SOURCES} )
ENDIF (ENABLEMAO)

